<!DOCTYPE html>
<html>
  <head>
    <title>AllParty</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class=" nav-nav">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <li><%= link_to "Inicio",   root_path, :class=>"linki" %></li>
          <li><%= link_to "Paquetes",   '#', :class=>"linki" %></li>
          <li><%= link_to "Gallery", '#', :class=>"linki" %></li>
          <li><%= link_to "About", '#', :class=>"linki" %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
           <li><%= link_to "Carrito",  '#', :class=>"linki" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Cuenta <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil", current_user, :class=>"linki" %></li>
              <li><%= link_to "Actualizar", edit_user_path(current_user), :class=>"linki"%></li>
              <li><%= link_to "Salir", logout_path, method: "delete", :class=>"linki" %></li>
            </ul>
          </li>
        <% else %>        
          <li><%= link_to "Entrar",  login_path , :class=>"linki" %></li>
          <li><%= link_to "Registrarse", signup_path, :class=>"linki" %></li>
        <% end %>
      </div>
    </nav>
    <div class="container">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      </div> 
    <%= yield %>
  </body>
</html>


