<div align="center">
  <h3>Send A message to Us</h3>

  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.text_field :name, :required => true, class: 'form-control' %>
    <%= f.text_field :email, :required => true, class: 'form-control'%>
    <%= f.text_field :message, :as => :text, :required => true, class:'form-control' %>
    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.submit "Enviar Mensaje", class: "btn btn-primary" %>
    </div>
</div>